@page
@using GadevangGruppe3Razor.Models;
@model GadevangGruppe3Razor.Pages.TilmeldBegivenhedFolder.ShowAllTilmeldBegivenhedModel
@{
    ViewData["Title"] = "Se Alle Tilmeldinger Til Begivenheder";
}

<h4>Der er @Model.TilmeldB.Count tilmeldinger til kommende begivenheder</h4>
<br />
<a asp-page="Create" class="btn btn primary" style="color: white; background-color: green; border-color: green;">Opret Tilmelding Til Begivenhed</a>
<br />
<br />
<table>
    <thead style="background-color: gray; border: solid 1px; border-color: white;">
        <tr>
            <th>BrugerId</th>
            <th>EventId</th>
            <th>Kommentar</th>
            <th>Handlinger</th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color: lightgray; text-align: center; margin: 3px;">
        @if (Model.TilmeldB.Count() != 0)
        {
            @foreach (TilmeldBegivenhed item in Model.TilmeldB)
            {
                <tr style="border: solid 1px; border-color: white;">
                    <td style="border: solid 1px; border-color: white;">@item.BrugerId</td>
                    <td style="border: solid 1px; border-color: white;">@item.EventId</td>
                    <td style="border: solid 1px; border-color: white;">@item.Kommentar</td>
                    <td style="border: solid 1px; border-color: white;">
                        <a asp-page="Update" asp-route-eventId="@item.EventId" class="btn btn primary" style="color: white; background-color: gray; border-color: gray;">Opdater</a>
                    </td>
                    <td>
                        <a asp-page="Delete" asp-route-eventId="@item.EventId" class="btn btn primary" style="color: white; background-color: #C94646; border-color: #C94646;">Slet</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>