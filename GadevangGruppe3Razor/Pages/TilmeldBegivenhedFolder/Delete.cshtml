@page
@using GadevangGruppe3Razor.Models
@model GadevangGruppe3Razor.Pages.TilmeldBegivenhedFolder.DeleteModel
@{
    ViewData["Title"] = "Slet Tilmelding Til Begivenhed";
}

<h3>Slet Tilmelding Til Begivenhed</h3>

<a asp-page="/BegivenhedFolder/ShowAllBegivenhed" class="btn btn primary" style="color: white; background-color: gray; border-color: gray;">Tilbage til oversigt</a>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.TilmeldB.BrugerId" class="control-label"></label>
        <input asp-for="@Model.TilmeldB.BrugerId" style="display: br; width: 30%;" readonly class="form-control" />
        <span asp-validation-for="@Model.TilmeldB.BrugerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.TilmeldB.EventId" class="control-label"></label>
        <input asp-for="@Model.TilmeldB.EventId" style="display: br; width: 30%;" readonly class="form-control" />
        <span asp-validation-for="@Model.TilmeldB.EventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.TilmeldB.Kommentar" class="control-label"></label>
        <input asp-for="@Model.TilmeldB.Kommentar" style="display: br; width: 30%;" readonly class="form-control" />
        <span asp-validation-for="@Model.TilmeldB.Kommentar" class="text-danger"></span>
    </div>
    <span class="text-danger">@Model.MessageError</span>
    <div class="form-group">
        <input asp-for="@Model.Confirm" type="checkbox" id="Bekræft" /> Bekræft at du ønsker at slette tilmeldingen
    </div>
    <div class="formgroup">
        <input type="submit" value="Slet" class="btn btn-primary" style="background-color: #C94646; border-color: #C94646;" />
    </div>
</form>