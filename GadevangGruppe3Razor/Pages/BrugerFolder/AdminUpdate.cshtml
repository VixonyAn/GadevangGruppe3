@page
@using GadevangGruppe3Razor.Models;
@model GadevangGruppe3Razor.Pages.BrugerFolder.AdminUpdateModel
@{
	ViewData["Title"] = "Admin Update";
}

<h3>Admin Opdatering af Status for @Model.Bruger.Brugernavn</h3>

<form method="post">
	<br />
	<div class="form-group">
		<label asp-for="@Model.Bruger.BrugerId" class="control-label"></label>
		<input asp-for="@Model.Bruger.BrugerId" readonly class="form-control" />
		<span asp-validation-for="@Model.Bruger.BrugerId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="control-label">Medlemskabs Type</label>
		<select asp-for="@Model.SelectMedlemskabsType" asp-items="Html.GetEnumSelectList<MedlemskabsType>()" class="form-control">
			<option value="Select">Vælg en medlemskabstype</option>
		</select>
		<span asp-validation-for="@Model.Bruger.MedlemskabsTypen" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="control-label">Position</label>
		<select asp-for="@Model.SelectPosition" asp-items="Html.GetEnumSelectList<Position>()" class="form-control">
			<option value="Select">Vælg en position</option>
		</select>
		<span asp-validation-for="@Model.Bruger.Positionen" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		<input type="submit" value="Opdater" class="btn btn-primary" style="background-color: green; border-color: green;" />
	</div>
</form>