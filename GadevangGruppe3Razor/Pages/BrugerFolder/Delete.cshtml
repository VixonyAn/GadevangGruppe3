@page
@model GadevangGruppe3Razor.Pages.BrugerFolder.DeleteModel
@{
	ViewData["Title"] = "Delete";
}

<head>
	<style>
		div {width:50}
	</style>
</head>
<form method="post">
	<br />
	<div class="form-group">
		<label asp-for="@Model.Bruger.BrugerId" class="control-label"></label>
		<input asp-for="@Model.Bruger.BrugerId" readonly class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Brugernavn" class="control-label"></label>
		<input asp-for="@Model.Bruger.Brugernavn" readonly class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Email" class="control-label"></label>
		<input asp-for="@Model.Bruger.Email" readonly class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Telefon" class="control-label"></label>
		<input asp-for="@Model.Bruger.Telefon" readonly class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Medlemskab" class="control-label"></label>
		<input asp-for="@Model.Bruger.Medlemskab" readonly class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Positionen" class="control-label"></label>
		<input asp-for="@Model.Bruger.Positionen" readonly class="form-control" />
	</div>
	<span class="text-danger">@Model.Message</span>
	<div class="form-group">
		<input asp-for="@Model.Confirm" type="checkbox" id="Confirm" /> Confirm that you want to delete the Hotel
	</div>
	<div class="formgroup">
		<input type="submit" value="Delete" class="btn btn-primary" style="backgroup-color: #C94646; border-color: #C94646" />
	</div>
</form>
