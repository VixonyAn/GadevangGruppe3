@page
@using GadevangGruppe3Razor.Models;
@model GadevangGruppe3Razor.Pages.BrugerFolder.UpdateModel
@{
	ViewData["Title"] = "Update";
}

<h3>Opdater Bruger</h3>

<form method="post">
	<br />
	<div class="form-group">
		<label asp-for="@Model.Bruger.BrugerId" class="control-label"></label>
		<input asp-for="@Model.Bruger.BrugerId" readonly class="form-control" />
		<span asp-validation-for="@Model.Bruger.BrugerId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Brugernavn" class="control-label"></label>
		<input asp-for="@Model.Bruger.Brugernavn" class="form-control" />
		<span asp-validation-for="@Model.Bruger.Brugernavn" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Adgangskode" class="control-label"></label>
		<input asp-for="@Model.Bruger.Adgangskode" class="form-control" />
		<span asp-validation-for="@Model.Bruger.Adgangskode" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Email" class="control-label"></label>
		<input asp-for="@Model.Bruger.Email" class="form-control" />
		<span asp-validation-for="@Model.Bruger.Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.Bruger.Telefon" class="control-label"></label>
		<input asp-for="@Model.Bruger.Telefon" class="form-control" />
		<span asp-validation-for="@Model.Bruger.Telefon" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input asp-for="@Model.BilledUrl" hidden="true" class="form-control" />
	</div>
	<div class="form-group">
		<label class="control-label">Medlemskabs Type</label>
		<select asp-for="@Model.SelectMedlemskabsType" asp-items="Html.GetEnumSelectList<MedlemskabsType>()" class="form-control">
			<option value="Select">Vælg en medlemskabstype</option>
		</select>
		<span asp-validation-for="@Model.Bruger.Medlemskab" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="control-label">Position</label>
		<select asp-for="@Model.SelectPosition" asp-items="Html.GetEnumSelectList<Position>()" class="form-control">
			<option value="Select">Vælg en position</option>
		</select>
		<span asp-validation-for="@Model.Bruger.Positionen" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Opdater" class="btn btn-primary" style="background-color: grey; border-color: grey;" />
	</div>
</form>