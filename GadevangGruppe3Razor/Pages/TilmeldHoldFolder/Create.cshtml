@page
@using GadevangGruppe3Razor.Models
@model GadevangGruppe3Razor.Pages.TilmeldHoldFolder.CreateModel
@{
    ViewData["Title"] = "Opret Tilmelding Til Hold";
}

<h3>Opret Tilmelding Til Hold</h3>

<a asp-page="/HoldFolder/ShowAllHold" class="btn btn primary" style="color: white; background-color: gray; border-color: gray;">Tilbage til oversigt</a>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.CurrentBruger.BrugerId" class="control-label"></label>
        <input asp-for="@Model.CurrentBruger.BrugerId" style="display: br; width: 30%;" readonly class="form-control" />
        <span asp-validation-for="@Model.CurrentBruger.BrugerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.HoldId" class="control-label"></label>
        <input asp-for="@Model.HoldId" style="display: br; width: 30%;" readonly class="form-control" />
        <span asp-validation-for="@Model.HoldId" class="text-danger"></span>
    </div>
    <br />
    <div class="formgroup">
        <input type="submit" value="Opret" class="btn btn-primary" style="background-color: green; border-color: green;" />
    </div>
</form>