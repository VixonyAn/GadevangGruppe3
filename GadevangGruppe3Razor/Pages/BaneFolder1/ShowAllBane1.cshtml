@page
@using GadevangGruppe3Razor.Models
@model GadevangGruppe3Razor.Pages.BaneFolder1.ShowAllBane1Model
@{
}
<h4>Baner:</h4>

<a asp-page="CreateBane" class="btn btn-primary">Opret bane</a>
<hr />
@* <form>
    Søg efter hotel navn: <input type="text" asp-for="@Model.FilterName" />
    <input type="submit" value="Filter" />
</form> *@
<br />
<hr />

<table style="width:85%;align-content:center">
    <thead style="border-radius:60px;
               background-color:#a2d9ce ;
               border:solid 1px;
               border:white;
               text-align:center">
        <tr style="border-bottom: 2px solid black;">
            <th>Bane Id</th>
            <th>Bane Type</th>
            <th>Bane Miljø</th>
            <th>Beskrivelse</th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Baner.Count() != 0)
        {
            @foreach (Bane item in Model.Baner)
            {
                <tr style="border:solid 1px;border-color:white;border-bottom:1px solid gray;border-right:1px solid gray;border-left:1px solid gray">
                    <td style="text-align:center;background-color:#e6e6e6;">
                        <b>@item.BaneId</b>
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td style="background-color:#e6e6e6">
                        @item.Miljø
                    </td>
                    <td>
                        @item.Beskrivelse
                    </td>
                    <td>
                        <a class="btn btn-primary" style="background-color:#ffa303;border-color:#ffa303" asp-page="UpdateBane" asp-route-baneId="@item.BaneId">
                            Update
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-primary" style="background-color:#ff035f;border-color:#ff035f" asp-page="DeleteBane" asp-route-baneId="@item.BaneId">
                            Delete
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="25" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                        </a>
                    </td>



                </tr>
            }
        }
</table>